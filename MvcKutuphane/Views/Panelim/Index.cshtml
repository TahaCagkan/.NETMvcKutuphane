@model MvcKutuphane.Models.Entity.TBLUYELER
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPanelim.cshtml";
}

<h2>Ana Sayfa</h2>
<hr />

@using (Html.BeginForm("Index2", "Panelim", FormMethod.Post))
{
<table class="table table-hover" style="margin-top:30px">
    <tr>
        <td>
            <b>Mail Adresi : </b>@HttpContext.Current.User.Identity.Name
        </td>
    </tr>
    <tr>
        <td>
            <b>Öğrenci ID : </b>
            @Html.TextBoxFor(x => x.ID, new { @class = "form-control", @readonly = true })
        </td>
    </tr>
    <tr>
        <td>
            <b>Ad : </b>
            @Html.TextBoxFor(x => x.AD,new {@class="form-control",@readonly = true })
        </td>
    </tr>
    <tr>
        <td>
            <b>Soyad : </b> 
            @Html.TextBoxFor(x => x.SOYAD,new {@class="form-control",@readony=true })
        </td>
    </tr>
    <tr>
        <td>
            <b>Kullanıcı Adı : </b>  
            @Html.TextBoxFor(x => x.KULLANICIADI,new {@class="form-control",@readonly= true })
        </td>
    </tr>
    <tr>
        <td>
            <b>Şifre : </b>
           @Html.TextBoxFor(x => x.SIFRE,new {@class="form-control"})
        </td>
    </tr>

    <tr>
        <td>
            <b>Fakülte : </b> 
            @Html.TextBoxFor(x => x.FAKULTE, new {@class="form-control",@readonly=true })
        </td>
    </tr>
    <tr>
        <td>
            <button class="btn btn-success">Şifre Güncelle</button>
        </td>
    </tr>
</table>
}